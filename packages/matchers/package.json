{
  "name": "@web-gestures/matchers",
  "version": "0.0.12",
  "description": "Custom Vitest matchers for testing web gestures",
  "author": "Jose Quintas <juniorquintas@gmail.com>",
  "keywords": [
    "testing",
    "vitest",
    "matchers",
    "gesture",
    "assertions",
    "typescript"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JCQuintas/web-gestures"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:types && mv dist/packages/matchers/src/* dist/ && rm -rf dist/packages/",
    "build:types": "tsc --project tsconfig.build.json",
    "build:lib": "vite build --config vite.config.ts"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./types": "./dist/types.d.ts"
  },
  "peerDependencies": {
    "vitest": "^3.0.0",
    "@web-gestures/core": "^0.0.12"
  }
}
