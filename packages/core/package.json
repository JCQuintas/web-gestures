{
  "name": "@web-gestures/core",
  "version": "0.0.12",
  "description": "The core engine of GestureEvents, a modern and robust multi-pointer gesture detection library for JavaScript.",
  "author": "Jose Quintas <juniorquintas@gmail.com>",
  "keywords": [
    "multitouch",
    "gesture",
    "library",
    "wheel",
    "pan",
    "pinch",
    "move",
    "rotate",
    "press",
    "tap",
    "simultaneous",
    "gestures",
    "pointer",
    "typescript"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JCQuintas/web-gestures"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:types && mv dist/packages/core/src/* dist/ && rm -rf dist/packages/",
    "build:types": "tsc --project tsconfig.build.json",
    "build:lib": "vite build --config vite.config.ts"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "devDependencies": {
    "@web-gestures/testing": "workspace:*"
  }
}
